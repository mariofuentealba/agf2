				var rutList:XMLList = xml.children();
				for each(var node:XML in rutList){
					//arrRut.addItem({rut: node.toString()});
					arrRut.addItem({rut: node.@id, nombre: node.@nombre, tipoEntidad: node.@tipoEntidad, vigencia: node.@vigencia});
				}
			}
			
